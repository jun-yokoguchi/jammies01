<h1>Sign up </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :nickname %>
      <%= f.text_field :nickname, placeholder: 'ニックネーム', class: 'form-control'%>
      
      <%= f.label :email %>
      <%= f.text_field :email, placeholder: 'メールアドレス', class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'パスワード(3文字以上)', class: 'form-control'%>

      <%= f. label :password_confirmation, "Confirmation" %>
      <%= f. password_field :password_confirmation, placeholder: 'パスワード再入力(確認用)', class: 'form-control' %>

      <%= f.submit "登録する", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>